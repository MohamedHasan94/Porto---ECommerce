@model Transaction


<tr id="@Model.Id">
    <td>@Model.CheckOutId</td>
    <td>@Model.Product.Name</td>
    <td>@Model.Quantity</td>
    <td>@Model.Product.OfferPrice</td>
    <td>@Model.PaymentMethod</td>
    <td>@Model.Customer.UserName</td>
    <td>@Model.DateTime</td>
    <td>@Model.Status</td>
    <td>
        @if (Model.Status == TransactionStatus.Pending)
        {
            <button class="btn btn-info" onclick="ChangeStatus(@Model.Id ,'Shipped')">Shipped</button>
            <button class="btn btn-danger" onclick="ChangeStatus(@Model.Id  , 'Rejected')">Reject</button>
        }

        else if (Model.Status == TransactionStatus.Shipped)
        {
            <button class="btn btn-success" onclick="ChangeStatus(@Model.Id ,'Completed')">Completed</button>
        }
    </td>
</tr>
