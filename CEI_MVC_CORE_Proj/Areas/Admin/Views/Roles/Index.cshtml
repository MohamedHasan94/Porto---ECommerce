@model IEnumerable<AppRole>

@{
    ViewData["Title"] = "Users Roles";
}

<h2>Roles List</h2>

<table class="table table-hover table-bordered" style="max-width:600px;" >
    <thead>
        <tr>

            <th>
                @Html.DisplayNameFor(m => m.Name)
            </th>
            <th>
                @Html.DisplayNameFor(m => m.UserRoleRel.Count)
            </th>

        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>

                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UserRoleRel.Count)
                </td>

            </tr>
        }
    </tbody>
</table>
